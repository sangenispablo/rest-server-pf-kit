    <!-- Bootstrap css-->
    <link rel="stylesheet" type="text/css" href="/assets/css/vendors/bootstrap.css">
    <!-- App css-->
    <link rel="stylesheet" type="text/css" href="/assets/css/style.css">
    <link id="color" rel="stylesheet" href="/assets/css/color-1.css" media="screen">
    <!-- Responsive css-->
    <link rel="stylesheet" type="text/css" href="/assets/css/responsive.css">
  </head>
  <body>
    <!-- Loader starts-->
    <div class="loader-wrapper">
        <div class="loader">
          <div class="loader-bar"></div>
          <div class="loader-bar"></div>
          <div class="loader-bar"></div>
          <div class="loader-bar"></div>
          <div class="loader-bar"></div>
          <div class="loader-ball"></div>
        </div>
    </div>
    <!-- Loader ends-->
    <!-- login page start-->
    <section>
    <div class="container-fluid p-0">
      <div class="row">
        <div class="col-12">
          <div class="login-card">
            <form class="theme-form login-form" action="/login" method="POST" novalidate="">
              <h4>Login</h4>
              <h6>!Bienvenido! Ingresa a tu cuenta.</h6>

              <% if (errorMessage) { %>
                <div class="alert alert-danger dark alert-dismissible fade show" role="alert">
                    <strong>Ups ! </strong> <%= errorMessage %>
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
              <% } %>

              <div class="form-group">
                <label>Email</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="icon-email"></i></span>
                    <input 
                        class="form-control <%= validationErrors.find(e=>e.param==='email') ? 'is_invalid': '' %>"
                        type="email"
                        name="email"
                        id="email"
                        placeholder="test@gmail.com"
                        value="<%= oldInput.email %>" />
                </div>
              </div>
              <div class="form-group">
                <label>Password</label>
                <div class="input-group"><span class="input-group-text"><i class="icon-lock"></i></span>
                  <input 
                    class="form-control <%= validationErrors.find(e=>e.param==='password') ? 'invalid': '' %>"
                    type="password" 
                    name="password" 
                    id="password"
                    placeholder="*****************"
                    value="<%= oldInput.password %>"
                >
                </div>
              </div>
              
              <div class="form-group">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button class="btn btn-primary btn-block" type="submit">Login</button>
              </div>
              <div class="form-group">
                  <p>¿No tienes una cuenta?<a class="ms-2" href="/signup">Crear una cuenta</a></p>
              </div>
              <div class="form-group">
                  <p>¿Olvidaste tu contraseña?<a class="ms-2" href="/reset">Resetear</a></p>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    </section>
    <!-- latest jquery-->
    <script src="/assets/js/jquery-3.5.1.min.js"></script>
    <!-- Bootstrap js-->
    <script src="/assets/js/bootstrap/bootstrap.bundle.min.js"></script>
    <!-- feather icon js-->
    <script src="/assets/js/icons/feather-icon/feather.min.js"></script>
    <script src="/assets/js/icons/feather-icon/feather-icon.js"></script>
    <!-- scrollbar js-->
    <!-- Sidebar jquery-->
    <script src="/assets/js/config.js"></script>
    <!-- Plugins JS start-->
    <!-- Plugins JS Ends-->
    <!-- Theme js-->
    <script src="/assets/js/script.js"></script>
    <!-- login js-->
    <!-- Plugin used-->
  </body>
</html>